{
  "name": "pnr-ticket-status-ui",
  "version": "1.0.0",
  "description": "PNR Ticket Status UI with performance optimization",
  "main": "index.js",
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "build:analyze": "ANALYZE=true webpack --mode production",
    "build:stats": "webpack --mode production --json > webpack-stats.json",
    "optimize": "npm run build && npm run optimize:images && npm run optimize:fonts",
    "optimize:images": "imagemin 'src/images/**/*.{jpg,jpeg,png}' --out-dir=dist/images --plugin=imagemin-mozjpeg --plugin=imagemin-pngquant",
    "optimize:fonts": "glyphhanger --subset=*.woff2 --formats=woff2",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "perf:audit": "npm run build && npm run lighthouse",
    "clean": "rimraf dist coverage",
    "serve": "serve dist -s -l 3000",
    "start": "npm run dev"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.23.0",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@jest/globals": "^29.7.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "compression-webpack-plugin": "^10.0.0",
    "core-js": "^3.33.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "glyphhanger": "^4.0.1",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.3",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^23.0.1",
    "lighthouse": "^11.2.0",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "rimraf": "^5.0.5",
    "serve": "^14.2.1",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.5",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "workbox-webpack-plugin": "^7.0.0"
  },
  "dependencies": {
    "intersection-observer": "^0.12.2"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!tests/**",
      "!coverage/**",
      "!dist/**",
      "!webpack.config.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "keywords": [
    "pnr",
    "ticket",
    "status",
    "ui",
    "performance",
    "optimization",
    "webpack",
    "tailwindcss"
  ],
  "author": "PNR Status UI Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
