# Modern PNR Frontend Environment Configuration
# Copy this file to .env.local and update the values

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL
VITE_API_URL=http://localhost:8000

# WebSocket URL for real-time updates
VITE_SOCKET_URL=ws://localhost:8000

# Environment (development, staging, production)
VITE_ENVIRONMENT=development

# =============================================================================
# Monitoring and Analytics
# =============================================================================

# Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN=

# Monitoring endpoint for custom analytics
VITE_MONITORING_ENDPOINT=/api/monitoring

# Google Analytics ID (optional)
VITE_GA_ID=

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable analytics tracking
VITE_ENABLE_ANALYTICS=false

# Enable/disable voice features
VITE_ENABLE_VOICE=true

# Enable/disable offline functionality
VITE_ENABLE_OFFLINE=true

# Enable/disable QR code scanning
VITE_ENABLE_QR_SCANNER=true

# Enable/disable map integration
VITE_ENABLE_MAPS=true

# Enable/disable push notifications
VITE_ENABLE_NOTIFICATIONS=true

# =============================================================================
# Build Configuration
# =============================================================================

# Build version (automatically set during CI/CD)
VITE_BUILD_VERSION=

# Build timestamp (automatically set during CI/CD)
VITE_BUILD_TIMESTAMP=

# =============================================================================
# Development Configuration
# =============================================================================

# Enable development tools
VITE_DEV_TOOLS=true

# Mock API responses (for development)
VITE_MOCK_API=false

# Debug mode
VITE_DEBUG=false

# =============================================================================
# Deployment Configuration (CI/CD)
# =============================================================================

# AWS Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Staging Environment
STAGING_API_URL=https://staging-api.pnrtracker.com
STAGING_SOCKET_URL=wss://staging-api.pnrtracker.com
STAGING_S3_BUCKET=
STAGING_CLOUDFRONT_ID=
STAGING_NETLIFY_ID=

# Production Environment
PRODUCTION_API_URL=https://api.pnrtracker.com
PRODUCTION_SOCKET_URL=wss://api.pnrtracker.com
PRODUCTION_S3_BUCKET=
PRODUCTION_CLOUDFRONT_ID=
PRODUCTION_NETLIFY_ID=

# Security
SNYK_TOKEN=

# =============================================================================
# Third-party Services
# =============================================================================

# Map service API key (if using external maps)
VITE_MAPS_API_KEY=

# Push notification service keys
VITE_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# SMS service configuration (for notifications)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=